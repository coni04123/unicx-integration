# Application
NODE_ENV=production
PORT=5000
API_PREFIX=api/v1
APP_NAME=UNICX Integration
FRONTEND_URL=https://system.2n5global.com

# Database Configuration - Azure CosmosDB Mongo API
COSMOS_DB_NAME=unicx-test
DATABASE_MAX_POOL_SIZE=50
DATABASE_MIN_POOL_SIZE=10

# JWT Configuration
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=unicx-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (SendGrid or SMTP)
EMAIL_PROVIDER=smtp
EMAIL_HOST=smtp.zoho.com
EMAIL_PORT=465
EMAIL_SECURE=true

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_TTL=900
AUTH_RATE_LIMIT_MAX=5

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=https://system.2n5global.com
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# File Storage (Azure Blob or AWS S3)
STORAGE_PROVIDER=azure
AZURE_STORAGE_CONTAINER=unicx-files
AWS_S3_BUCKET=unicx-s3-bucket
AWS_S3_REGION=unicx-region
AWS_ACCESS_KEY_ID=aws-access-key-id
AWS_SECRET_ACCESS_KEY=aws-secret-access-key

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn
ENABLE_SWAGGER=true

# Cleanup Jobs
AUDIT_LOG_RETENTION_DAYS=90
QR_CODE_CLEANUP_DAYS=7
FAILED_INVITATION_CLEANUP_DAYS=14

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Session Management
SESSION_TIMEOUT_MINUTES=30
MAX_CONCURRENT_SESSIONS=3

# Feature Flags
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_WHATSAPP_INTEGRATION=true
ENABLE_EXTERNAL_AUTH_PROVIDERS=false

# SYSTEM ADMIN
SYSTEM_ADMIN_EMAIL=admin@unicx.com
SYSTEM_ADMIN_FIRST_NAME=System
SYSTEM_ADMIN_LAST_NAME=Administrator
SYSTEM_ADMIN_PASSWORD=admin123

# Azure DLQ
AZURE_SERVICE_BUS_DLQ_TOPIC=test
AZURE_SERVICE_BUS_DLQ_SUBSCRIPTION=test
